<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_widget"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWidgetBackground"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_title"
        android:padding="@dimen/widgetListViewPadding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/widgetDimension"
            android:layout_height="@dimen/widgetDimension"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/ic_launcher_logo"
            android:contentDescription="@string/icon_logo"/>

        <TextView
            android:id="@+id/tv_widget_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:padding="@dimen/widgetPaddingTitle"
            android:text="@string/app_name"
            android:textAllCaps="true"
            android:textColor="@color/colorWidgetText"
            android:textStyle="bold" />

    </LinearLayout>

    <ListView
        android:id="@+id/lv_widget"
        android:layout_below="@+id/ll_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </ListView>

</RelativeLayout>